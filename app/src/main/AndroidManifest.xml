<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CS2340A_Team43"
        tools:targetApi="31">
        <activity
            android:name="com.example.cs2340a_team43.Views.StartScreenActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.CS2340A_Team43">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Views.HowToPlayActivity"
            android:screenOrientation="landscape"
            android:exported="false" />
        <activity
            android:name=".Views.ConfigurationPageActivity"
            android:screenOrientation="landscape"
            android:exported="false" />
        <activity
            android:name=".Views.GameActivity"
            android:screenOrientation="landscape"
            android:exported="false" />
        <activity
            android:name=".Views.EndScreenActivity"
            android:screenOrientation="landscape"
            android:exported="false" />
    </application>

</manifest>