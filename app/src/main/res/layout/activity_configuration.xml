<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/name_prompt"
        android:layout_width="164dp"
        android:layout_height="37dp"
        android:layout_marginTop="16dp"
        android:text="@string/enter_name"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/name_input_box"
        android:layout_width="283dp"
        android:layout_height="52dp"
        android:ems="10"
        android:inputType="text"
        android:autofillHints="Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_prompt"
        tools:text="Name" />

    <TextView
        android:id="@+id/select_difficulty_text"
        android:layout_width="154dp"
        android:layout_height="33dp"
        android:layout_marginTop="36dp"
        android:text="@string/choose_difficulty"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_input_box" />

    <RadioGroup
        android:id="@+id/difficulty_button_group"
        android:layout_width="397dp"
        android:layout_height="67dp"
        android:checkedButton="@+id/easy_button"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_difficulty_text">

        <RadioButton
            android:id="@+id/easy_button"
            android:layout_width="128dp"
            android:layout_height="55dp"
            android:text="@string/easy_difficulty" />

        <RadioButton
            android:id="@+id/medium_button"
            android:layout_width="153dp"
            android:layout_height="54dp"
            android:text="@string/medium_difficulty" />

        <RadioButton
            android:id="@+id/hard_button"
            android:layout_width="wrap_content"
            android:layout_height="51dp"
            android:text="@string/hard_difficulty" />

    </RadioGroup>

    <TextView
        android:id="@+id/select_sprite_prompt"
        android:layout_width="144dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:text="@string/select_sprite"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/difficulty_button_group" />

    <RadioGroup
        android:id="@+id/sprite_select_group"
        android:layout_width="386dp"
        android:layout_height="86dp"
        android:checkedButton="@+id/sprite1"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_sprite_prompt"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:id="@+id/sprite1"
            android:layout_width="136dp"
            android:layout_height="match_parent"
            android:background="@drawable/frowny"
            android:contentDescription="@string/sprite1_description" />

        <Button
            android:id="@+id/sprite2"
            android:layout_width="111dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/medium_face"
            android:contentDescription="@string/sprite2_description" />

        <Button
            android:id="@+id/sprite3"
            android:layout_width="102dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/smiley"
            android:contentDescription="@string/sprite3_description" />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>